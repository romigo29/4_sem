<Window x:Class="WPF_FitnessClub.SubscriptionDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_FitnessClub"
        mc:Ignorable="d"
        Title="{DynamicResource SubscriptionDetailsTitle}" Height="800" Width="800"
        WindowStartupLocation="CenterScreen"
        MinWidth="600px"
        MinHeight="500px">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <Grid>
                <TextBlock x:Name="SubscriptionName"
                           Text="{Binding SubscrName}"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Visibility="{Binding ViewModeVisible}" Foreground="{DynamicResource TextBrush}"/>

                <TextBox x:Name="EditSubscriptionName"
                         Text="{Binding SubscrName, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="24"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,20"
                         Visibility="{Binding EditModeVisible}" Foreground="{DynamicResource TextBrush}"/>
            </Grid>

            <!-- Изображение -->
            <Grid>
                <Image x:Name="SubscriptionImage"
                       Source="{Binding ImagePath}"
                       Height="300"
                       Width="400"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

                <Button Content="{DynamicResource SelectImage}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0,0,0,10"
                        Command="{Binding ChooseImageCommand}"
                        Visibility="{Binding EditModeVisible}" Style="{StaticResource DefaultButtonStyle}"/>
            </Grid>

            <!-- Информация об абонементе -->
            <Border BorderBrush="#FF3A3434"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="20"
                    Margin="0,0,0,20">

                <StackPanel>
                    <!-- Цена -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="{DynamicResource Price}"
                                   
                                 FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock Text="{Binding Price, StringFormat={}{0:C}}"
                                 Visibility="{Binding ViewModeVisible}" Foreground="{DynamicResource TextBrush}" Margin="15,0,0,0"/>
                        <TextBox Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                                Width="100"
                                Visibility="{Binding EditModeVisible}" Margin="15,0,0,0" Foreground="{DynamicResource TextBrush}" Style="{DynamicResource CustomTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Тип абонемента -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="{DynamicResource Type}"
                                 FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock Text="{Binding Type}"
                                 Visibility="{Binding ViewModeVisible}" Foreground="{DynamicResource TextBrush}" Margin="15,0,0,0"/>
                        <TextBox Text="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                                Width="150"
                                Visibility="{Binding EditModeVisible}" Margin="15,0,0,0" Foreground="{DynamicResource TextBrush}" Style="{DynamicResource CustomTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Длительность -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="{DynamicResource Duration}"
                                 FontWeight="Bold" Foreground="{DynamicResource TextBrush}"/>
                        <TextBlock Text="{Binding Duration}"
                                 Visibility="{Binding ViewModeVisible}" Foreground="{DynamicResource TextBrush}" Margin="15,0,0,0"/>
                        <TextBox Text="{Binding Duration, UpdateSourceTrigger=PropertyChanged}"
                                Width="150"
                                Visibility="{Binding EditModeVisible}" Margin="7,0,0,0" Foreground="{DynamicResource TextBrush}" Style="{DynamicResource CustomTextBoxStyle}"/>
                    </StackPanel>

                    <!-- Описание -->
                    <TextBlock Text="{DynamicResource SubscriptionDescription}"
                             FontWeight="Bold"
                             Margin="0,0,0,5" Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="{Binding Description}"
                             TextWrapping="Wrap"
                             Margin="0,0,0,10"
                             Visibility="{Binding ViewModeVisible}" Foreground="{DynamicResource TextBrush}"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="Wrap"
                            Height="100"
                            Margin="0,0,0,10"
                            AcceptsReturn="True"
                            Visibility="{Binding EditModeVisible}" Foreground="{DynamicResource TextBrush}" Style="{DynamicResource CustomTextBoxStyle}"/>

                    <TextBlock Text="{DynamicResource Reviews}"
                               FontWeight="Bold"
                               Margin="0,0,0,5" Foreground="{DynamicResource TextBrush}"/>

                    <Border BorderBrush="#FF3A3434"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="20"
                            Margin="0,0,0,20" Style="{DynamicResource CustomBorderStyle}">

                        <WrapPanel x:Name="ReviewWrapPanel">

                        </WrapPanel>

                    </Border>
                </StackPanel>
            </Border>



            <!-- Написать отзыв-->
            <StackPanel
                Visibility="{Binding WriteReviewVisible}">
                <TextBlock Text="{DynamicResource YourOpinionMatters}" Foreground="{DynamicResource TextBrush}"/>
                <Border
                    BorderThickness="1"
                    Padding="20"
                    Margin="0,0,0,20" BorderBrush="{DynamicResource TextBrush}">


                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{DynamicResource UserName}" Foreground="{DynamicResource TextBrush}"/>
                        <TextBox x:Name="ReviewNameBox" Grid.Row="1" Style="{DynamicResource CustomTextBoxStyle}"/>
                        <TextBlock Text="{DynamicResource Rating}" Grid.Row="2" Foreground="{DynamicResource TextBrush}"/>
                        <StackPanel x:Name="RatingRadioBox" Grid.Row="3" Orientation="Horizontal">
                            <RadioButton Content="1" Style="{DynamicResource CustomRadioButtonStyle}"/>
                            <RadioButton Content="2" Style="{DynamicResource CustomRadioButtonStyle}"/>
                            <RadioButton Content="3" Style="{DynamicResource CustomRadioButtonStyle}"/>
                            <RadioButton Content="4" Style="{DynamicResource CustomRadioButtonStyle}"/>
                            <RadioButton Content="5" Style="{DynamicResource CustomRadioButtonStyle}"/>
                        </StackPanel>

                        <TextBlock Text="{DynamicResource Comment}" Grid.Row="4" Foreground="{DynamicResource TextBrush}"/>
                        <TextBox x:Name="CommentBox" Grid.Row="5" Height="49.9" Style="{DynamicResource CustomTextBoxStyle}"/>
                        <Button x:Name="AddReviewButton" Content="{DynamicResource SaveButton}" Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Center" Command="{Binding AddReviewCommand}" Style="{DynamicResource DefaultButtonStyle}"/>
                    </Grid>
                </Border>
            </StackPanel>


            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        >
                <Button Content="{DynamicResource EditButton}"
                        Width="120"
                        Height="30"
                        Margin="0,0,10,0"
                        Command="{Binding EditCommand}"
                        Visibility="{Binding ViewModeVisible}" Style="{StaticResource DefaultButtonStyle}"/>

                <Button Content="{DynamicResource SaveButton}"
                        Width="120"
                        Height="30"
                        Margin="0,0,10,0"
                        Command="{Binding SaveCommand}"
                        Visibility="{Binding EditModeVisible}" Style="{StaticResource DefaultButtonStyle}"/>

                <Button Content="{DynamicResource DeleteButton}"
                        Width="120"
                        Height="30"
                        Margin="0,0,10,0"
                        Command="{Binding DeleteCommand}"
                        Visibility="{Binding EditModeVisible}" Style="{StaticResource DefaultButtonStyle}"/>

                <Button Content="{DynamicResource CancelButton}"
                        Width="120"
                        Height="30"
                        Margin="0,0,10,0"
                        Command="{Binding CancelCommand}"
                        Visibility="{Binding EditModeVisible}" Style="{StaticResource DefaultButtonStyle}"/>

                <Button Content="{DynamicResource CloseButton}"
                        Width="120"
                        Height="30"
                        Command="{Binding CloseCommand}" Style="{StaticResource DefaultButtonStyle}"/>

            </StackPanel>


        </StackPanel>
    </ScrollViewer>
</Window>